# terraform.tfvars.example


# Project Configuration
project_name = "currency-converter"
environment  = "production"  # dev, staging, production

# AWS Configuration
aws_region = "us-east-1"
vpc_cidr   = "10.0.0.0/16"

# EC2 Configuration
key_name = "29jul25"  # REPLACE with your actual AWS key pair name

# Jenkins Server Configuration
jenkins_instance_type = "t3.medium"  # t3.medium recommended for Jenkins

# EKS Cluster Configuration
kubernetes_version = "1.28"
eks_instance_type  = "t3.medium"  # t3.medium for production workloads
eks_desired_nodes  = 2
eks_min_nodes      = 1
eks_max_nodes      = 4

# Application Configuration
app_port = 5000
